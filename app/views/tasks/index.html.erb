<h1>My tasks</h1>

<div style="display: flex;">
  <% @tasks.each do |task| %>
    <div>
      <%= link_to task_path(task) do %>
        <div style="padding: 10px; margin: 10px;"><%= task.title %></div>
      <% end %>
      <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </div>
  <% end %>
</div>

<p><%= link_to 'create a new task', tasks_new_path %></p>
